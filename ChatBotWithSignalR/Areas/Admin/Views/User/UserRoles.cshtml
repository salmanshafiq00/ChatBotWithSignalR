@using ChatBotWithSignalR.Areas.Admin.Models;
@model ApplicationUserViewModel;
@{
    ViewData["Title"] = "Manage User Roles";
}

<h2>Manage User Roles</h2>
<div class="card">
    <div class="card-header">
        <h3>Username: @Model.UserName</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-action="OnPostUserRoles" asp-route-userId="@Model.Id">
            @for (int i = 0; i < Model.UserRoles.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleId" />
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
                    <input type="checkbox" asp-for="@Model.UserRoles[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.UserRoles[i].IsSelected">@Model.UserRoles[i].RoleName</label>
                </div>
            }
            <button type="submit" class="btn btn-outline-primary">Save</button>
        </form>
    </div>
</div>
