@using ChatBotWithSignalR.Areas.Admin.Models;
@model PermissionViewModel
@{
    ViewData["Title"] = "Manage Role Claims";
}
<h1>Manage Role</h1>
<div class="card">
    <div class="card-body">
        <form method="post" asp-action="OnPostRoleClaims">
            <input type="hidden" asp-for="RoleId" />
            <div>
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Page</th>
                            <th>View</th>
                            <th>Create</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.RoleClaims.Count; i++)
                        {
                            <input type="hidden" asp-for="@Model.RoleClaims[i].ClaimType" />
                            <input type="hidden" asp-for="@Model.RoleClaims[i].ViewValue" />
                            <input type="hidden" asp-for="@Model.RoleClaims[i].CreateValue" />
                            <input type="hidden" asp-for="@Model.RoleClaims[i].EditValue" />
                            <input type="hidden" asp-for="@Model.RoleClaims[i].DeleteValue" />
                            <tr>
                                <td>
                                    @Model.RoleClaims[i].ClaimType
                                </td>
                                <td>
                                    @Model.RoleClaims[i].ModuleName
                                </td>
                                <td>
                                    <input type="checkbox" asp-for="@Model.RoleClaims[i].IsViewSelected" class="form-check" />
                                </td>
                                <td>
                                    <input type="checkbox" asp-for="@Model.RoleClaims[i].IsCreateSelected" class="form-check" />
                                </td>
                                <td>
                                    <input type="checkbox" asp-for="@Model.RoleClaims[i].IsEditSelected" class="form-check" />
                                </td>
                                <td>
                                    <input type="checkbox" asp-for="@Model.RoleClaims[i].IsDeleteSelected" class="form-check" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
