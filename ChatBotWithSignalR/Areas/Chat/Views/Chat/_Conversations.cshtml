@section Scripts{
    <script>
        $(document).ready(() => {
            scrollToBottom();
            $('#ToUserName').val('@Model.ToUserName');
        });
    </script>
}
<script>
    $('#ToUserName').val('@Model.ToUserName');

    function showImageToModal(url) {
        $('#modalImgTag').attr('src', url);
        $('#imageModal').modal('show');

    }
</script>


